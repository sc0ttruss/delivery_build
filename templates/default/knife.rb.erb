# See http://docs.getchef.com/config_rb_knife.html for more information on knife configuration options

current_dir = File.dirname(__FILE__)
log_level                :info
log_location             STDOUT
node_name                "<%=node['delivery_build']['chef_username']%>"
client_key               "#{current_dir}/srv-delivery.pem"
validation_client_name   "<%=node['delivery_build']['organisation']%>-validator"
validation_key           "#{current_dir}//<%=node['delivery_build']['organisation']%>-validator.pem"
chef_server_url          "<%=node['delivery_build']['url_chef']%>/organizations/<%=node['delivery_build']['organisation']%>"
cache_type               'BasicFile'
cache_options( :path => "#{ENV['HOME']}/.chef/checksums" )
cookbook_path            ["#{current_dir}/../cookbooks"]
